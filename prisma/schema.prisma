generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Cliente {
  cpf          String        @id
  senha        String
  nome         String
  tel          String
  email        String
  plano        Plano
  vencimento   Float
  salas        Sala[]
  agendamentos Agendamento[]
}

model Funcionario {
  cpf     String  @id
  senha   String
  nome    String
  tel     String
  email   String
  working Boolean @default(false)
  funcao  Funcao
  salas   Sala[]
}

model Sala {
  id            Int         @id @default(autoincrement())
  nome          String
  cliente       Cliente     @relation(fields: [clienteId], references: [cpf])
  funcionario   Funcionario @relation(fields: [funcionarioId], references: [cpf])
  clienteId     String
  funcionarioId String
  status        StatusSala
  mensagens     Mensagem[]
}

model Mensagem {
  id     Int    @id @default(autoincrement())
  msg    String
  salaId Int
  sala   Sala   @relation(fields: [salaId], references: [id])
}

model Agendamento {
  id         Int      @id @default(autoincrement())
  data       DateTime
  descricao  String
  clienteCpf String
  cliente    Cliente  @relation(fields: [clienteCpf], references: [cpf])
  status     Status   @default(AGENDADO)
}

enum Plano {
  MB100
  MB300
  MB500
}

enum Funcao {
  ADMINISTRATIVO
  TECNICO
  GERENTE
}

enum Status {
  AGENDADO
  CONCLUIDO
  CANCELADO
}

enum StatusSala {
  ABERTA
  FECHADA
}
